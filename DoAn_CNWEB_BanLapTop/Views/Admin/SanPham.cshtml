@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Share/LayOutAdmin.cshtml";
}
@model IEnumerable<DoAn_CNWEB_BanLapTop.Models.SanPham>
<div class="container">

    <h2 class="mt-3" style="text-align:center;color:blue;font-weight:bold;">
        ALL Sản Phẩm
    </h2>
    <p>
        @Html.ActionLink("Create New", "CreateEmployee")
    </p>
    <table class="table bordered">
        <tr>
            <th>Tên Sản Phẩm
            </th>
            <th>Giá
            </th>
            <th>Ảnh Bìa
            </th>
            <th>Số Lượng Tồn
            </th>
            <th>Mã Nhà Sản Xuất
            </th>
            <th>Mã Loại
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.TenSanPham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gia)
                </td>
                <td>
                    <img src="~/Images/@Html.DisplayFor(modelItem => item.AnhBia)" style="width:50px"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongTon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaNSX)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLoai)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.tbl_Deparment.Name)
                </td>*@
            <td>
                @Html.ActionLink("Edit", "UpdateEmployee", new { id=item.MaSanPham }) |
                @Html.ActionLink("Details", "DetailsEmployee", new { id=item.MaSanPham }) |
                @Html.ActionLink("Delete", "DeleteEmployee", new { id=item.MaSanPham })
            </td>
        </tr>
    }
    
    </table>
    </div>